<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <div class="login">

    <div class="form-container">

      <a href="/">
        <h2 class="title">Discovery Coworking </h2>
      </a>

      <div id="erroresFront" class="erroresDeFront">

      </div>

      <h1 class="title2">Sign In</h1>
      <p class="subtitle">Make an account on Discovery Coworking</p>


      <form action="/signin" class="form" method="post" enctype="multipart/form-data">
        <label for="userName" class="label">Name</label>
        <input type="text" name="userName" placeholder="Nombre"
          value="<%= typeof old != 'undefined' ? old.userName : '' %>" class="input input-name" />

        <% if (locals.errors && locals.errors.userName) { %>
          <span class="error-msg">
            <%=locals.errors.userName.msg %>
          </span>
          <% } %>


            <label for="userLastName" class="label">LastName</label>
            <input type="text" name="userLastName" placeholder="LastName" class="input input-name"
              value="<%= typeof old != 'undefined' ? old.userLastName : '' %>" />
            <% if (locals.errors && locals.errors.userLastName) { %>
              <span class="error-msg">
                <%= locals.errors.userLastName.msg %>
              </span>
              <% } %>

                <label for="email" class="label">Email address</label>
                <input type="email" name="userEmail" placeholder="e-mail adress"
                  value="<%= typeof old != 'undefined' ? old.userEmail : '' %>" required class="input input-email" />
                <% if (locals.errors && locals.errors.userEmail) { %>
                  <span class="error-msg">
                    <%= locals.errors.userEmail.msg %>
                  </span>
                  <% } %>

                    <label for="password" class="label">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password"
                      class="input input-password" value="<%= typeof old != 'undefined' ? old.password : '' %>" />
                    <% if (locals.errors && locals.errors.password) { %>
                      <span class="error-msg">
                        <%= locals.errors.password.msg %>
                      </span>
                      <% } %>
                        <label for="confirmPassword" class="label">confirmPassword</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="confirmPassword"
                          class="input input-password"
                          value="<%= typeof old != 'undefined' ? old.confirmPassword : '' %>" />
                        <% if (locals.errors && locals.errors.confirmPassword) { %>
                          <span class="error-msg">
                            <%= locals.errors.confirmPassword.msg %>
                          </span>
                          <% } %>

                            <input type="file" name="avatar" id="avatar" />
                            <% if (locals.errors && locals.errors.avatar) { %>
                              <span class="error-msg">
                                <%= locals.errors.avatar.msg %>
                              </span>
                              <% } %>

                                <button type="submit" value="Sign in" class="secondary-button login-button">Sign
                                  in</button>
      </form>
    </div>
  </div>
 <script src="/js/signin.js"></script> 
</body>

</html>