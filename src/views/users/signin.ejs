<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <div class="login">
      <div class="form-container">
        <a href="/"
          ><img src="../imgs/logo.png" alt="logo" class="logo"
        /></a>

        <h1 class="title">Sign In</h1>
        <p class="subtitle">Make an account on Discovery Coworking</p>
        
        <form
          action="/signin"
          class="form"
          method="POST"
          enctype="multipart/form-data"
        >
          <label for="userName" class="label">Name</label>
          <input
          type="text"
          name="userName"
          placeholder="Nombre"
          value="<%= locals.old && locals.old.userName ? locals.old.userName : '' %>"
            class="input input-name"
          />
          <% if (locals.errors && locals.errors.userName) { %>
            <span class="error-msg"><%= locals.errors.userName.msg %></span>
            <% } %>

            <label for="userLastName" class="label">LastName</label>
            <input
        type="text"
        name="userLastName"
        placeholder="LastName"
        class="input input-name"
        value="<%= locals.old && locals.old.userLastName ? locals.old.userLastName : '' %>"
      />
      <% if (locals.errors && locals.errors.userLastName) { %>
      <span class="error-msg"><%= locals.errors.userLastName.msg %></span>
      <% } %>

          <label for="email" class="label">Email address</label>
          <input
          type="email"
          name="userEmail"
          placeholder="e-mail adress"
          value="<%= locals.old && locals.old.userEmail ? locals.old.userEmail : '' %>"
            required
            class="input input-email"
          />
          <% if (locals.errors && locals.errors.userEmail) { %>
            <span class="error-msg"><%= locals.errors.userEmail.msg %></span>
            <% } %>

          <label for="password" class="label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Password"
            class="input input-password"
            value="<%= locals.old && locals.old.password ? locals.old.password : '' %>"
          />
          <% if (locals.errors && locals.errors.password) { %>
            <span class="error-msg"><%= locals.errors.password.msg %></span>
            <% } %>


          <label for="work" class="label">Category</label>
          <input
            type="text"
            name="category"
            id="category"
            placeholder="category"
            class="input input-category"
          />
          
          <input type="file" name="avatar" />
      <% if (locals.errors && locals.errors.avatar) { %>
      <span class="error-msg"><%= locals.errors.avatar.msg %></span>
      <% } %>

          <button
            type="submit"
            value="Sign in"
            class="primary-button login-button"
          >Sign in</button>
        </form>
      </div>
    </div>
    <%- include ("../partials/footer") %>
  </body>
</html>
