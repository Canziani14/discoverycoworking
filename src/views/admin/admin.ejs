<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>

    <!-- <link rel="stylesheet" href="/css/index.css" /> -->
  </head>
  <body>

    <%- include ("../partials/header") %>

    <main>
      <div class="container">
        <h2>Administrate Memberships</h2>
        
        <ul class="responsive-table">
          <li class="table-header">
            <div class="col col-1">ID</div>
            <div class="col col-2"> NAME</div>
            <div class="col col-3">$$</div>
            <div class="col col-4">DETAILS</div>
            <div class="col col-5">SERVICES </div>
            <div class="col col-5"> </div>
            <div class="col col-5"> </div>
            <div class="col col-5 create"><a href="admin/create">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M3 16v-2h7v2Zm0-4v-2h11v2Zm0-4V6h11v2Zm13 12v-4h-4v-2h4v-4h2v4h4v2h-4v4Z"/></svg>
            </a> </div>
          </li>

          <% memberships.forEach((membership, i) => { %>
            <li class="table-row">
              <div class="col col-1" data-label="Job Id"><%= i +1 %></div>
              <div class="col col-2" data-label="Customer Name"><%= membership.name %></div>
              <div class="col col-3" data-label="Amount"><%= membership.price %></div>
              <div class="col col-4" data-label="Payment Status"><%= membership.details %></div>
              <div class="col col-4 col-service" data-label="Payment Status"><%= membership.services %></div>
              <div class="col col-5">
              <a href="/admin/detail/<%= membership.id_membership %>">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="M12 16q1.875 0 3.188-1.312Q16.5 13.375 16.5 11.5q0-1.875-1.312-3.188Q13.875 7 12 7q-1.875 0-3.188 1.312Q7.5 9.625 7.5 11.5q0 1.875 1.312 3.188Q10.125 16 12 16Zm0-1.8q-1.125 0-1.912-.788Q9.3 12.625 9.3 11.5t.788-1.913Q10.875 8.8 12 8.8t1.913.787q.787.788.787 1.913t-.787 1.912q-.788.788-1.913.788Zm0 4.8q-3.65 0-6.65-2.038-3-2.037-4.35-5.462 1.35-3.425 4.35-5.463Q8.35 4 12 4q3.65 0 6.65 2.037 3 2.038 4.35 5.463-1.35 3.425-4.35 5.462Q15.65 19 12 19Z"/></svg>
              </a>
            </div>
              <div class="col col-5">
                <a href="/admin/edit/<%= membership.id_membership %>">
                  <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="m19.3 8.925-4.25-4.2 1.4-1.4q.575-.575 1.413-.575.837 0 1.412.575l1.4 1.4q.575.575.6 1.388.025.812-.55 1.387ZM17.85 10.4 7.25 21H3v-4.25l10.6-10.6Z"/></svg>
                </a>
              </div>
              <div class="col col-5">
                <a href="admin/delete/<%= membership.id_membership %>"">
                  <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24"><path d="m9.4 16.5 2.6-2.6 2.6 2.6 1.4-1.4-2.6-2.6L16 9.9l-1.4-1.4-2.6 2.6-2.6-2.6L8 9.9l2.6 2.6L8 15.1ZM7 21q-.825 0-1.412-.587Q5 19.825 5 19V6H4V4h5V3h6v1h5v2h-1v13q0 .825-.587 1.413Q17.825 21 17 21Z"/></svg>
                </a>
              </div>
            </li>
          <%})%>
         
        </ul>
      </div>
     
    </main>
    <%- include ("../partials/footer") %>

  </body>
</html>
