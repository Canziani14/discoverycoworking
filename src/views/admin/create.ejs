<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- FONTS -->
    <%- include ("../partials/links") %>
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/admin.css">
    <title>CREATE MEMBERSHIP</title>
  </head>
  <body>

    <%- include ("../partials/header") %>
    <section id="create">
      <h2>Create membership</h2>

      <div id="erroresFront" class="erroresDeFront">

      </div>


      <form
        action="/admin/create"
        method="POST"
        enctype="multipart/form-data"
        id="create"
        class="form"
      >
      

        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="name"
            placeholder="Name"
            
            value=""
          />
        </div>
        <% if (locals.errors && locals.errors.title) { %>
          <span class="error-msg"><%= locals.errors.title.msg %></span>
          <% } %>

        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="details"
            placeholder="Details"
            
            value=""
          />
          <% if (locals.errors && locals.errors.details) { %>
            <span class="error-msg"><%= locals.errors.details.msg %></span>
            <% } %>
        </div>
        <div class="form-group">
          <input
            type="textarea"
            class="form-control"
            name="services"
            placeholder="Services"
            value=""
          />
        </div>
        
        <% if (locals.errors && locals.errors.services) { %>
          <span class="error-msg"><%= locals.errors.services.msg %></span>
          <% } %>
        <div class="form-group">
          <input
            type="number"
            class="form-control"
            name="price"
            placeholder="Price $$"
            value=""
          />
        </div>
        <% if (locals.errors && locals.errors.price) { %>
          <span class="error-msg"><%= locals.errors.price.msg %></span>
          <% } %>

        <!--AquÃ­ solicito la imagen-->
        <div class="custom-file">
          <input type="file" name="imgMembership"  id="imgMembership" />
        </div>
        <% if (locals.errors && locals.errors.imgMembership) { %>
          <span class="error-msg"><%= locals.errors.imgMembership.msg %></span>
          <% } %>
        <div class="form-group">
          <button type="submit" class="btn btn btn-info">Guardar</button>
          <a href="/admin" class="btn btn-danger">Volver</a>
        </div>
      </form>
   
    </section>
    <%- include ("../partials/footer") %>
      <script src="/js/create.js"></script>
  </body>
</html>
